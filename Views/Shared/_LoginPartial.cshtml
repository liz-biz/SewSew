@using Microsoft.AspNetCore.Identity
@using SewSew.Areas.Identity.Data

@inject SignInManager<SewSewUser> SignInManager
@inject UserManager<SewSewUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="nav">
        <ul class="nav">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Account</a>
            </li>
            <li>
                <button type="submit" class="btn btn-lg">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul id="nav-menu">
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-dark">Login</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-dark">Register</a>
        </li>
    </ul>
 }
