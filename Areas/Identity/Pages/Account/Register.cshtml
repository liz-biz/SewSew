@page
@model RegisterModel
@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}


<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>Create a new account</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.FirstName"></label>
        <input asp-for="Input.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.LastName"></label>
        <input asp-for="Input.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <div class="input-wrapper">
            <input asp-for="Input.Password" class="form-control" id="password-input" type="password"/>
            <div class="password-input-box">
                <i class="bi bi-eye-slash-fill" id="toggle-password"></i>
            </div>
        </div>

    </div>
    <div class="form-group">
        <div >
            <label asp-for="Input.ConfirmPassword"></label>
            <div class="input-wrapper">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="confirm-password-input" type="password"/>
                <div class="password-input-box">
                    <i class="bi bi-eye-slash-fill" id="toggle-confirm-password"></i>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-default">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
